{
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*).js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*).css",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/privacy",
      "destination": "/legal/privacy.html"
    },
    {
      "source": "/terms",
      "destination": "/legal/terms.html"
    },
    {
      "source": "/blog/how-to-create-professional-invoice",
      "destination": "/blog/how-to-create-professional-invoice.html"
    },
    {
      "source": "/blog/invoice-vs-receipt-difference",
      "destination": "/blog/invoice-vs-receipt-difference.html"
    },
    {
      "source": "/blog/freelancer-invoice-guide",
      "destination": "/blog/freelancer-invoice-guide.html"
    },
    {
      "source": "/blog/invoice-payment-terms-explained",
      "destination": "/blog/invoice-payment-terms-explained.html"
    },
    {
      "source": "/blog/what-to-include-on-invoice",
      "destination": "/blog/what-to-include-on-invoice.html"
    }
  ]
}
